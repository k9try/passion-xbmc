<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.repo.installer" name="Repositories Installer"
       version="1.0.5" provider-name="Temhil, Frost (passion-xbmc.org)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Installer of Add-on Repositories for XBMC</summary>
    <description>This Add-on allow to select (from XBMC Wiki) and install Repositories of XBMC Add-ons</description>
    <platform>all</platform>
    <license>GPL</license>
    <nofanart>true</nofanart><!-- remember if you add [$CWD/fanart.jpg] remove this tag -->
  </extension>
</addon>
