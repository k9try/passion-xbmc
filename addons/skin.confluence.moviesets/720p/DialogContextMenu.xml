			<texturenofocus>DialogCloseButton.png</texturenofocus>
			<onleft>1000</onleft>
			<onright>1000</onright>
			<onup>1000</onup>
			<ondown>1000</ondown>
			<visible>system.getbool(input.enablemouse)</visible>
		</control>
		<control type="image">
			<posx>34</posx>
			<posy>-6</posy>
			<width>297</width>
			<height>4</height>
