<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="group">
			<description>make sure is not visible on load</description>
			<visible>false</visible>

			<control type="image" id="3001">
				<description>wait Image</description>
				<posx>-35</posx> <!-- offsetx of mouse position -->
				<posy>0</posy>   <!-- offsety of mouse position -->
				<width>35</width>
				<height>35</height>
				<aspectratio>keep</aspectratio>
				<texture>wait.gif</texture>
			</control>
			<control type="image" id="3002">
				<description>right Image</description>
				<posx>-35</posx>
				<posy>0</posy>
				<width>35</width>
				<height>35</height>
				<aspectratio>keep</aspectratio>
				<texture>right.gif</texture>
			</control>
			<control type="image" id="3003">
				<description>left Image</description>
				<posx>-35</posx>
				<posy>0</posy>
				<width>35</width>
				<height>35</height>
				<aspectratio>keep</aspectratio>
				<texture>left.gif</texture>
			</control>

			<control type="label" id="3010">
				<description>wav sound sfx</description>
				<posx>0</posx>
				<posy>0</posy>
				<label>dog.wav</label>
			</control>
		</control>
	</controls>
</window>