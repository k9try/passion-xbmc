<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <!-- General -->
  <category label="$LOCALIZE[128]">
    <setting type="lsep" label="Locations" />
    <setting id="areacode1" type="action" label="$LOCALIZE[14019]" option="close" action="RunScript($CWD/resources/lib/areacode.py,areacode1)" default="New York, NY" />
    <setting id="areacode2" type="action" label="$LOCALIZE[14020]" option="close" action="RunScript($CWD/resources/lib/areacode.py,areacode2)" default="London, United Kingdom" />
    <setting id="areacode3" type="action" label="$LOCALIZE[14021]" option="close" action="RunScript($CWD/resources/lib/areacode.py,areacode3)" default="Quebec, QC" />
    <setting id="currentlocation" type="text" label="Current Location" default="1" enable="false" />
  </category>

  <category label="Extras">
    <setting type="lsep" label="Rising and setting times for the Sun   [COLOR=66FFFFFF](Locale)[/COLOR]" />
    <setting id="risingsun_none" type="bool" label="Use standard times [6:00 AM - 8:00 PM]" default="true"/>
    <setting id="risingsun_city" type="action" label="Location" option="close" action="RunScript($CWD/resources/lib/risingsun.py)" enable="eq(-1,false)" default="" />
    <setting id="risingsun_pref" type="enum" label="Preference" values="Astronomical Twilight|Nautical Twilight|Civil Twilight|Sunrise and Sunset" default="3" enable="!eq(-1,) + eq(-2,false)" subsetting="true" />
    <setting id="risingsun_code" type="text" label="-" default="0" visible="false" />

    <setting type="lsep" label="Icons" />
    <setting id="icons_set" type="enum" label="Icons Set" values="Add-on|XBMC|Google|Custom" default="1" />
    <setting id="custom_icons" type="folder" source="local" label="Custom Icons" default="" subsetting="true" enable="eq(-1,3)" />
  </category>
</settings>
